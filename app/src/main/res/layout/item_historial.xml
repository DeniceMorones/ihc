<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#A7C585">

    <!-- Material y Producto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Título Materia -->
        <TextView
            android:id="@+id/tvLabelMaterial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bentham"
            android:text="MATERIAL:"
            android:textColor="#2F3E1D"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Título Producto -->
        <TextView
            android:id="@+id/tvLabelProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bentham"
            android:text="PRODUCTO:"
            android:textAlignment="textEnd"
            android:textColor="#2F3E1D"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Valores Material y Producto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tvMaterial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Peso y Puntos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Título Peso -->
        <TextView
            android:id="@+id/tvLabelPeso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bentham"
            android:text="PESO:"
            android:textColor="#2F3E1D"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Título Puntos -->
        <TextView
            android:id="@+id/tvLabelPuntos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bentham"
            android:text="PUNTOS:"
            android:textAlignment="textEnd"
            android:textColor="#2F3E1D"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Valores Peso y Puntos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tvPeso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPuntos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <!-- Fecha -->
    <!-- Título Fecha -->
    <TextView
        android:id="@+id/tvLabelFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bentham"
        android:text="FECHA:"
        android:textAlignment="center"
        android:textColor="#2F3E1D"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Valor Fecha -->
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray" />

</LinearLayout>
