<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EEE4"
    tools:context=".MapaActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBackMapa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvAppNameMapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/bentham"
            android:text="ECOCYCLE"
            android:textColor="#3E5227"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenido -->
    <LinearLayout
        android:id="@+id/content_group_mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_margin="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTitleMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inria_sans_light"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Ubicación de Puntos de Reciclaje"
            android:textAlignment="viewStart"
            android:textColor="#2F3E1D"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Aquí puedes reemplazar la imagen por el mapa real si lo deseas -->
        <ImageView
            android:id="@+id/imgMapa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/mapa_ejemplo" />

    </LinearLayout>

</RelativeLayout>
